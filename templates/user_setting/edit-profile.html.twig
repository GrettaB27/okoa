{% extends 'user/index.html.twig' %}

{% block title %}
	Modifier son profil
{% endblock %}

{% set imageProfile = imageProfile %}


{% block content %}

	<div class="col py-3 text-center p-4" style="background-color:#FBFCFB">
		<div class="row py-4 d-flex justify-content-center">
			<h1>Modifier le profil
			</h1>
			<div class="col-md-12">
				{{ form_start(editUserProfileForm) }}
				<div class="row d-flex justify-content-center">
					<div>
		


					</div>
					<div class="d-flex justify-content-center mt-4">
						<label for="file-upload" class="custom-file-upload btn">
							<i class="fa fa-cloud-upload"></i>
							Changer la photo</label>
						{{ form_row(editUserProfileForm.imageProfile, {label: ' ','id': 'file-upload'})}}


					</div>
					<div class="d-flex justify-content-center">

						<button type="submit" class="btn btn-secondary mt-3 mx-4">
							<i class="fa fa-trash"></i>
							Supprimer la photo</button>

					</div>
				</div>
				<div class="row  p-4 m-4">

					<div class="col-md-6">
						<div class="md-form mb-2">
							{{ form_row(editUserProfileForm.nom, {label: 'Nom', 'value':lastName, 'attr': {'class': 'form-control'}})}}
						</div>
					</div>
					<div class="col-md-6">
						<div class="md-form mb-2">
							{{ form_row(editUserProfileForm.prenom, {label: 'Pr√©nom',  'value':firstName, 'attr': {'class': 'form-control'}})}}

						</div>
					</div>
					<div class="col-md-6">
						<div class="md-form mb-2">
							{{ form_row(editUserProfileForm.portable, {label: 'Portable',  'value':portable, 'attr': {'class': 'form-control'}})}}

						</div>
					</div>
					<div class="col-md-6">
						<div class="md-form mb-2">
							{{ form_row(editUserProfileForm.email, {label: 'Email',  'disabled': true, 'value':email, 'attr': {'class': 'form-control'}})}}
						</div>
					</div>
					<div class="md-form mb-2">
						{{ form_row(editUserProfileForm.adresse, {label: 'Adresse',  'value':address, 'attr': {'class': 'form-control'}})}}
					</div>
					<div class=" text-md-left">
						<button type="submit" class="btn btn-primary mt-3">Modifier
						</button>
					</div>
					{{ form_end(editUserProfileForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block footer %}{% endblock %}

